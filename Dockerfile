FROM golang:1.23-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o nsscache-http .

FROM alpine:3.19
RUN apk --no-cache add ca-certificates
WORKDIR /app
COPY --from=builder /app/nsscache-http .

EXPOSE 8080
ENTRYPOINT ["/app/nsscache-http"]
CMD ["-config", "/etc/nsscache/config.yaml"]
